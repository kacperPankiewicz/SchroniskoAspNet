@model IEnumerable<Schronisko.kojec>
<div class="container">
    <p>
        @Html.ActionLink("Stwórz nowy", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dystrykt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.klatka)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.dystrykt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.klatka)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Detale", "Details", new { id = item.id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
    </div>